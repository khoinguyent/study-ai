# Cloud Environment Configuration Example
# Copy this file to .env.cloud and update values as needed

# Environment Configuration
ENVIRONMENT=cloud
INFRASTRUCTURE_PROVIDER=aws

# Message Broker Configuration (ElastiCache for cloud)
MESSAGE_BROKER_TYPE=elasticache
MESSAGE_BROKER_URL=redis://your-elasticache-endpoint:6379
REDIS_HOST=your-elasticache-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=your-elasticache-password
REDIS_DB=0

# Task Queue Configuration (SQS for cloud)
TASK_QUEUE_TYPE=sqs
TASK_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/your-queue-name

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account-id/your-queue-name
SQS_REGION=us-east-1

# Database Configuration (RDS)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/study_ai

# Service URLs (cloud - use load balancer or API Gateway URLs)
AUTH_SERVICE_URL=https://your-api-gateway.com/auth
DOCUMENT_SERVICE_URL=https://your-api-gateway.com/documents
INDEXING_SERVICE_URL=https://your-api-gateway.com/indexing
QUIZ_SERVICE_URL=https://your-api-gateway.com/quiz
NOTIFICATION_SERVICE_URL=https://your-api-gateway.com/notifications
LEAF_QUIZ_SERVICE_URL=https://your-api-gateway.com/leaf-quiz

# S3 Configuration (replace MinIO)
S3_BUCKET=study-ai-documents
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# JWT Configuration
SECRET_KEY=your-production-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# SageMaker Configuration (replace Ollama)
SAGEMAKER_ENDPOINT_NAME=your-sagemaker-endpoint
SAGEMAKER_REGION=us-east-1

# Logging
LOG_LEVEL=INFO

# Monitoring and Observability
CLOUDWATCH_LOG_GROUP=/aws/study-ai
CLOUDWATCH_REGION=us-east-1
XRAY_ENABLED=true
