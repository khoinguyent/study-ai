# Cloud Environment Configuration Example
# Copy this file to .env.cloud and update values as needed

# Environment Configuration
ENVIRONMENT=cloud
INFRASTRUCTURE_PROVIDER=aws

# Message Broker Configuration (Redis for cloud)
MESSAGE_BROKER_TYPE=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Task Queue Configuration (Celery for cloud)
TASK_QUEUE_TYPE=celery

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/study_ai

# Service URLs (cloud - will be updated by deployment scripts)
AUTH_SERVICE_URL=http://auth-service:8001
DOCUMENT_SERVICE_URL=http://document-service:8002
INDEXING_SERVICE_URL=http://indexing-service:8003
QUIZ_SERVICE_URL=http://quiz-service:8004
NOTIFICATION_SERVICE_URL=http://notification-service:8005
LEAF_QUIZ_SERVICE_URL=http://leaf-quiz-service:8006

# MinIO Configuration (cloud)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=study-ai-documents
MINIO_SECURE=false

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# Ollama Configuration (cloud)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b

# Logging
LOG_LEVEL=INFO

# Gateway Configuration
ENABLE_GATEWAY_MOCKS=false
