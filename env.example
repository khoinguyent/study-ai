# Environment Configuration
ENV=development  # development, production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/study_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
MAX_CONTENT_LENGTH=100000000  # 100MB

# Storage Configuration
STORAGE_TYPE=local  # local (MinIO) or cloud (AWS S3)

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=study-ai-documents
MINIO_SECURE=False

# AWS S3 Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=study-ai-documents

# LLM Configuration
LLM_TYPE=local  # local (Ollama/LlamaIndex) or cloud (OpenAI)

# OpenAI Configuration (for production)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=llama2

# LlamaIndex Configuration (for local development)
LLAMAINDEX_MODEL_PATH=./models/
LLAMAINDEX_MODEL_NAME=llama-2-7b-chat.gguf

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Development Settings
LOG_LEVEL=INFO 