# Quiz Service Environment Configuration Example
# Copy this file to .env and update values as needed

# Database
DATABASE_URL=postgresql://postgres:password@quiz-db:5432/quiz_db

# Redis
REDIS_URL=redis://redis:6379

# Quiz Generation Strategy (single source of truth)
# Options: "openai", "ollama", "huggingface", "auto", "mock"
QUIZ_GENERATION_STRATEGY=openai

# Language Settings
QUIZ_LANG_DEFAULT=en
QUIZ_LANG_MODE=auto             # 'auto' | 'vi' | 'en'
# QUIZ_PROVIDER removed; provider now derived from QUIZ_GENERATION_STRATEGY

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b

# Local testing overrides
# OLLAMA_BASE_URL=http://localhost:11434

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your-huggingface-token-here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
QUESTION_GENERATION_MODEL=google/flan-t5-base
DISTRACTOR_GENERATION_MODEL=google/flan-t5-base
HF_MODEL_ID=meta-llama/Meta-Llama-3-8B-Instruct
HF_API_KEY=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Optional: OpenAI vector store ids (comma-separated) for file_search
VECTOR_STORE_IDS=

# Service URLs
AUTH_SERVICE_URL=http://auth-service:8001
DOCUMENT_SERVICE_URL=http://document-service:8002
INDEXING_SERVICE_URL=http://indexing-service:8003
NOTIFICATION_SERVICE_URL=http://notification-service:8005

# Service Configuration
SERVICE_NAME=quiz-service
SERVICE_PORT=8004
