# Local Environment Configuration Example
# Copy this file to .env.local and update values as needed

# Environment Configuration
ENVIRONMENT=local
INFRASTRUCTURE_PROVIDER=local

# Message Broker Configuration (Redis for local)
MESSAGE_BROKER_TYPE=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Task Queue Configuration (Celery for local)
TASK_QUEUE_TYPE=celery

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/study_ai

# Service URLs (local)
AUTH_SERVICE_URL=http://localhost:8001
DOCUMENT_SERVICE_URL=http://localhost:8002
INDEXING_SERVICE_URL=http://localhost:8003
QUIZ_SERVICE_URL=http://localhost:8004
NOTIFICATION_SERVICE_URL=http://localhost:8005
LEAF_QUIZ_SERVICE_URL=http://localhost:8006

# MinIO Configuration (local)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=study-ai-documents
MINIO_SECURE=false

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# Ollama Configuration (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Quiz Generation Strategy
QUIZ_GENERATION_STRATEGY=openai

# Logging
LOG_LEVEL=INFO
